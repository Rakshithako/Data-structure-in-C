include <stdio.h>
#include <stdlib.h>

int main() {
    int *p;
    p = (int*) malloc(sizeof(int));     // allocate memory for 1 int
    *p = 10;                            // store first value

    p = (int*) realloc(p, 2 * sizeof(int));  // resize for 2 ints
    p[1] = 20;                          // store second value

    printf("%d %d\n", p[0], p[1]);      // print both values
    free(p);                            // free memory
    return 0;
}
